{% props field = null, value = [] %}

{% set errors = value ?: field.vars.errors|default([]) %}

{% if errors is not iterable %}
    {% set errors = [errors] %}
{% endif %}

<ul{{ attributes.defaults({
    class: 'ui-form-errors',
    hidden: errors|length == 0,
}) }}>
    {% for error in errors %}
        <li class="ui-form-error">{{ error.message|default(error) }}</li>
    {% endfor %}
</ul>
