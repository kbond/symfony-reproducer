<div{{ attributes }}>
    <div class="card">
        <div class="card-body d-grid gap-2">
            <button
                type="button"
                class="btn btn-primary btn-block"
                data-action="live#action"
                data-action-name="dispatch"
            >
                Dispatch 10 Messages (random failures)
            </button>
            <button
                    type="button"
                    class="btn btn-primary btn-block"
                    data-action="live#action"
                    data-action-name="dispatch1Success"
            >
                Dispatch 1 Successful Message
            </button>
            <button
                    type="button"
                    class="btn btn-primary btn-block"
                    data-action="live#action"
                    data-action-name="dispatch1Failure"
            >
                Dispatch 1 Failure Message
            </button>
        </div>
    </div>
</div>
