{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
    {{ component('alert', {message: 'function message', type: 'error'}) }}

    {% component 'alert' with {message: 'embedded message', class: 'extra-class', role: 'alert'} %}
        {% block default %}
            {{ parent() }} (From embedded!)
        {% endblock %}
    {% endcomponent %}

    {% component dialog %}
        {% block title %}Custom Title{% endblock %}
        {% block body %}Custom Body{% endblock %}
        {% block footer %}Custom Footer{% endblock %}
    {% endcomponent %}

    <hr/>

    {{ component('table', { caption: 'data table', headers: ['key', 'value'], data: [[1, 2], [3, 4]] }) }}

    <hr/>
    {% component table with { caption: 'data table', headers: ['key', 'value'], data: [[1, 2], [3, 4]] } %}
        {% block th %}custom th ({{ parent() }}){% endblock %}
        {% block td %}custom td ({{ parent() }}){% endblock %}

        {% block footer %}My footer{% endblock %}
    {% endcomponent %}
{% endblock %}
